<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".turista.ConfirmOfferActivity"
        android:padding="20dp"
        >

    <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearContainer"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="!Recibiste una oferta!"
                android:textAlignment="center"
                android:textSize="40sp"
                android:layout_margin="10dp"
                android:fontFamily="cursive"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentarios"
                android:textAlignment="center"
                android:textSize="40sp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                />

        <TextView
                android:id="@+id/offerComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentarios"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textAlignment="center"
                android:textSize="40sp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                />

        <TextView
                android:id="@+id/offerDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                />


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costo"
                android:textAlignment="center"
                android:textSize="40sp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                />

        <TextView
                android:id="@+id/offerCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="costo"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linearContainer"
            android:padding="20dp"
            >

        <Button
                android:id="@+id/offerShowRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta"
                android:layout_margin="10dp"
                />

        <Button
                android:id="@+id/acceptOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acepta"
                android:layout_margin="10dp"
                />

        <Button
                android:id="@+id/denyOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Negar"
                android:layout_margin="10dp"
                />

    </LinearLayout>

</RelativeLayout>