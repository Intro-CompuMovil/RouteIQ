<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".empresa.CreateTourOfferActivity"
        android:layout_margin="20dp"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        >

                    <TextView
                            android:textAlignment="center"
                            android:id="@+id/tourTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo tour"
                            android:textSize="22sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        >

                    <TextView
                            android:textAlignment="center"
                            android:id="@+id/tourDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo tour"
                            android:textSize="22sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerInParent="true" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="30dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comentarios"
                    android:labelFor="@id/comments"
                    android:id="@+id/commentsLabel"
                    android:layout_alignParentStart="true"
                    />

            <EditText
                    android:layout_below="@id/commentsLabel"
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Comentarios"
                    android:inputType="textEmailAddress"
                    android:layout_centerInParent="true" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Costo"
                    android:labelFor="@id/cost"
                    android:id="@+id/costLabel"
                    android:layout_below="@id/comments"
                    android:layout_marginTop="15dp"
                    />

            <EditText
                    android:layout_below="@id/costLabel"
                    android:id="@+id/cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Costo"
                    android:inputType="numberDecimal"
                    />

            <Button
                    android:id="@+id/chooseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cost"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:text="Escoger fecha"
                    />

            <TextView
                    android:id="@+id/placedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/chooseDate"
                    android:layout_alignParentStart="true"
                    android:text="Esta es una fecha"
                    android:layout_below="@id/cost"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

            <LinearLayout
                    android:id="@+id/placesOptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/chooseDate"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/placesOptions"
                    >
                <Button
                        android:id="@+id/sendOffer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enviar oferta"
                        android:layout_margin="10dp"
                        />

                <Button
                        android:id="@+id/viewRoute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostrar ruta"
                        android:layout_margin="10dp"
                        />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>