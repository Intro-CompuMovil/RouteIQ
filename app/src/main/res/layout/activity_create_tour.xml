<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".turista.CreateTourActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¡Crea tu tour!\nY recibe ofertas"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/relativeContainer"
            android:textSize="40sp"
            android:textAlignment="center"
            android:fontFamily="cursive"
            />

    <RelativeLayout
            android:id="@+id/relativeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:labelFor="@id/tourTitle"
                android:id="@+id/tourTitleLabel"
                android:layout_alignParentStart="true"
                />

        <EditText
                android:layout_below="@id/tourTitleLabel"
                android:id="@+id/tourTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo"
                android:layout_centerInParent="true"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:labelFor="@id/tourDescription"
                android:id="@+id/tourDescriptionLabel"
                android:layout_below="@id/tourTitle"
                android:layout_marginTop="15dp"
                />

        <EditText
                android:layout_below="@id/tourDescriptionLabel"
                android:id="@+id/tourDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Que deseas del tour"
                />

        <Button
                android:id="@+id/createTour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tourDescription"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:text="Crear tour"
                />

    </RelativeLayout>

</RelativeLayout>